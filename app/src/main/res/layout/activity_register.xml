<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/input_layout"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_logo"
            android:layout_height="120dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:textColor="@color/purple_200"
            android:lineSpacingExtra="2.3sp"
            android:text="Enter details to Register" />


        <TextView
            android:layout_width="wrap_content"
            android:text="Enter the required information below"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="#666666"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:id="@+id/et_username"
            android:padding="15dp"
            android:hint="Username"
            android:textSize="14sp"
            android:background="@drawable/bg_curve"
            android:backgroundTint="#d1d1d1"
            android:layout_height="55dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/et_email"
            android:padding="15dp"
            android:hint="Email"
            android:textSize="14sp"
            android:background="@drawable/bg_curve"
            android:backgroundTint="#d1d1d1"
            android:layout_height="55dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/et_pass"
            android:padding="14dp"
            android:hint="Password"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:background="@drawable/bg_curve"
            android:backgroundTint="#d1d1d1"
            android:layout_height="55dp"/>

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:text="Get Started"
            android:layout_marginTop="30dp"
            android:id="@+id/button_started"
            android:background="@drawable/square_corner"
            android:backgroundTint="@color/purple_200"
            android:padding="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/uber_move_bold"
            android:layout_height="wrap_content"/>




    </LinearLayout>



</ScrollView>